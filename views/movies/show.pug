extends ../layout

block content
  .movie-details
    h1= movie.name
    
    p
      strong Rating: 
      span #{movie.rating}/10
    
    p
      strong Year: 
      span= movie.year
    
    p
      strong Description: 
      span= movie.description
    
    if movie.genres && movie.genres.length > 0
      p
        strong Genres: 
        span= movie.genres.join(', ')
    
    p
      strong Created: 
      span= movie.createdAt.toDateString()
    
    .actions
      a(href=`/movies/${movie._id}/edit`) Edit Movie
      form(action=`/movies/${movie._id}?_method=DELETE` method="POST" style="display: inline-block;")
        button(type="submit" onclick="return confirm('Are you sure you want to delete this movie?')") Delete Movie
      a(href="/movies") Back to Movies 